#tag_all login_logon_versions "*";

flag TestFlag : u16 {
    A = 1;
    B = 2;
    C = 4;
    D = 8;
    E = 16;
}

flag InnerFlag : u8 {
    H = 1;
    I = 2;
    J = 4;
    K = 8;
    L = 16;
}

flag ThirdFlag : u8 {
    X = 1;
    Y = 2;
    Z = 4;
    W = 8;
}

