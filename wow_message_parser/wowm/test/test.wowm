clogin TestStruct = 0xFF {
    TestFlag f;
    if (f & A) {
        u8 b_A1;
        InnerFlag i;
        if (i & H) {
            u8 b_H1;
        }
        else if (i & I) {
            u8 b_I1;
            ThirdFlag t;           
            if (t & W) {
                u8 b_W1;
            }
            if (t & X) {
                u8 b_X1;
            }
            else if (t & Z) {
                u8 b_Z1;
            }
        }
    } elseif (f & B) {
        u8 b_B1;
    }
    if (f & C) {
        u8 b_C1;
    }
    if (f & E) {
        u8 b_E1;
    }
}

test TestStruct {
    f = A | C | D;
    b_A1 = 1;
    b_C1 = 2;
    i = I;
    t = Y;
    b_I1 = 3;
} [
    0xFF, /* opcode */
    0x0D, 0x00, /* TestFlag */
    0x01, /* b_A1 */
    0x02, /* InnerFlag */
    0x03, /* b_I1 */
    0x02, /* ThirdFlag */
    0x02, /* b_C1 */
]

test TestStruct {
    f = B | C | D;
    b_B1 = 1;
    b_C1 = 2;
} [
    0xFF, /* opcode */
    0x0E, 0x00, /* TestFlag */
    0x01, /* b_B1 */
    0x02, /* b_C1 */
]
